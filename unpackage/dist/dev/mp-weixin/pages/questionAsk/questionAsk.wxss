.problem_content .problem_card {
  margin-top: 20rpx;
  padding: 40rpx 40rpx 20rpx 40rpx;
  background: #ffffff;
  box-shadow: 0px 2px 22px 0px rgba(106, 119, 133, 0.13);
  border-radius: 12rpx;
}
.problem_content .problem_card .answer_info {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #929CA4;
  background: #f6f6f6;
  border-radius: 6px;
}
.problem_content .problem_card .problem_card_bottom {
  color: #03C173;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}
.problem_content .problem_card .problem_card_info {
  font-size: 28rpx;
  color: #40474E;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F8F8F8;
}
.problem_content .problem_card .problem_status {
  color: #FFFFFF;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
  width: 36px;
  height: 20px;
}
.problem_content .problem_card .problem_status .problem_status_open {
  background: #03C173;
  border-radius: 22rpx;
}
.problem_content .problem_card .problem_status .problem_status_hide {
  background-color: #FF9E18;
  border-radius: 22rpx;
}
.problem_content .problem_card .problem_card_top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userTime {
  font-size: 24rpx;
  color: #929CA4;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userName {
  font-size: 30rpx;
  color: #40474E;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userLogo {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
  margin-right: 20rpx;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userLogo image {
  width: 100%;
  vertical-align: middle;
}
.problem_content {
  margin-top: 10rpx;
}
.questionAsk_content {
  padding: 30rpx 38rpx;
}
.questionAsk_content .questionAsk_header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.questionAsk_content .questionAsk_header .class_name {
  font-size: 30rpx;
  color: #40474E;
}
.questionAsk_content .questionAsk_header .class_grade {
  color: #7F889E;
  font-size: 26rpx;
}

