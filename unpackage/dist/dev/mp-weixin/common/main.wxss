/*每个页面公共css */
 .uni-searchbar__box {
  border: none;
}
.searchBox {
  position: fixed;
  width: 90%;
  top: 0;
  z-index: 999999;
}
.DataNo {
  margin: 300rpx auto;
  text-align: center;
}
.input-section {
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 110rpx;
  bottom: 0rpx;
  left: 30rpx;
  right: 0rpx;
  z-index: 500;
  background: #fff;
}
.input_input {
  background: #fff;
  margin-top: 12rpx;
  z-index: 500;
  width: 580rpx;
  height: 110rpx;
  padding-left: 35rpx;
  border: #F8F8F8 solid 2rpx;
  border-radius: 20rpx;
}
.send_btn {
  width: 110rpx;
  height: 66rpx;
  position: absolute;
  top: 24rpx;
  right: 30rpx;
  background: #03C173;
  z-index: 550;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.send_btn_text {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 32rpx;
  font-family: 'PingFang';
  color: #fff;
  z-index: 560;
}
.problem_content {
  margin-top: 10rpx;
}
.problem_content .problem_card {
  margin-top: 20rpx;
  padding: 40rpx 40rpx 20rpx 40rpx;
  background: #ffffff;
  box-shadow: 0px 2px 22px 0px rgba(106, 119, 133, 0.13);
  border-radius: 12rpx;
}
.problem_content .problem_card .answer_info {
  margin: 20rpx 0;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #929CA4;
  background: #f6f6f6;
  border-radius: 6px;
}
.problem_content .problem_card .problem_card_bottom {
  color: #03C173;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}
.problem_content .problem_card .problem_card_info {
  font-size: 28rpx;
  color: #40474E;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F8F8F8;
}
.problem_content .problem_card .problem_status {
  color: #FFFFFF;
  font-size: 24rpx;
  text-align: center;
  line-height: 42rpx;
  width: 48px;
  height: 46px;
}
.problem_content .problem_card .problem_status .problem_status_open {
  background: #03C173;
  border-radius: 22rpx;
}
.problem_content .problem_card .problem_status .problem_status_hide {
  background-color: #FF9E18;
  border-radius: 22rpx;
}
.problem_content .problem_card .problem_card_top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userTime {
  font-size: 24rpx;
  color: #929CA4;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userName {
  font-size: 30rpx;
  color: #40474E;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userLogo {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
  margin-right: 20rpx;
}
.problem_content .problem_card .problem_card_top .problem_card_top_user .userLogo image {
  width: 100%;
  vertical-align: middle;
}

